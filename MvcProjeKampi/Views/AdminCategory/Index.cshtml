@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /><br />
<table class="table table-bordered" style="background-color:white" align="center">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/AdminCategory/DetailsCategory/@item.CategoryID" class="btn btn-dark">Başlıklar</a></td>
        </tr>

    }
</table>
<br />
<a href="/AdminCategory/AddCategory/" class="btn btn-dark" text>Yeni Kategori</a>


